<mujoco model="mushr_nano">
  <compiler angle="radian" />
  <size njmax="500" nconmax="100"/>
  <option timestep="0.01"/>
  <include file="cars/base_car/car1.xml"/>
  <include file="cars/base_car/car2.xml"/>
  <include file="cars/base_car/car3.xml"/>
  <include file="cars/base_car/car4.xml"/>
  <asset>
    <mesh name="track_mesh" file="sharp_turns.stl" scale="0.001 0.001 0.001"/>
    <texture name="track" file="track.png" type="2d"/>
